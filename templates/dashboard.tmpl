        <div class="my-3">
            <label for="prompt" class="form-label">プロンプト</label>
            <textarea name="prompt" class="form-control" id="prompt" rows="6">{{ .prompt }}</textarea>
        </div>
        <div class="my-3">
            <button id="update-btn" type="submit" class="btn btn-primary">更新</button>
        </div>
    </form>

</div>

